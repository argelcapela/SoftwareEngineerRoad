//  SUM with dinamically memory allocation again, using CALLOC!
#include <stdio.h>
#include <stdlib.h>
int main()
{

int i,n,sum=0,*ptr;
/*
printf("%d\n",ptr);
printf("%d\n",i);
printf("%d\n",n);
printf("%d\n",sum);
*/

printf("Enter the number of numbers:\n ");
scanf("%d",&n);

ptr = (int*)malloc(n*sizeof(int));

printf("\n\nEnter the values:\n\n");
for(i=1;i<=n;++i)
{
	scanf("%d",ptr + i);
//	printf("%d",*(ptr+i));
	sum+= *(ptr+i);
}

printf("The sum is: \n");
printf("%d",sum);

free(ptr);

return 0;
}
